@model PagedList.IPagedList<ASP_Mussika.Models.turismo_categoria>
@using PagedList.Mvc;
@{
    ViewBag.Title = "categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="headline_part centered margin-top-75"> Procure por Categorias de Turismo</h3>
        </div>
    </div>
    <div class="row margin-bottom-60">

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <a href="/Turismo/Index?categoria=@item.id" class="img-box" data-background-image="../Repository/images/turismo/turismo.png">
                    <div class="utf_img_content_box visible">
                        <h4>@item.descricao  </h4>
                       
                    </div>
                </a>
            </div>
        }


    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12">
        <div class="utf_pagination_container_part margin-bottom-70">
            <nav class="pagination">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("categorias",
                        new { page }))
            </nav>
        </div>
    </div>
</div>

