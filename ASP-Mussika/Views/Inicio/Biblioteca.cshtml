@model PagedList.IPagedList<ASP_Mussika.Models.CompraViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Biblioteca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="titlebar" class="gradient margin-bottom-0">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Mussika Biblioteca</h2>
                <nav id="breadcrumbs">
                    <ul>
                        <li><a href="/inicio/principal">Inicio</a></li>
                        <li>Mussika Biblioteca</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 listing_grid_item">
            <div class="listing_filter_block margin-top-30">

                <div class="col-md-12 col-xs-12">

                    @*<div class="sort-by">
                            <div class="utf_sort_by_select_item sort_by_margin">
                                <select onchange="filtrar()" id="filtroCategorias" data-placeholder="Categorias:" class="utf_chosen_select_single">
                                    <option value="">--Selecione a Categoria--</option>
                                    @foreach (var item in ViewBag.categorias)
                                    {
                                        <option value="@item.id">@item.descricao</option>
                                    }

                                </select>
                            </div>
                        </div>*@

                </div>
            </div>
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-lg-4 col-md-12">
                        <a href="javascript:myFunction(@item.id_compra,'@item.linkVideo')" class="utf_listing_item-container" data-marker-id="2">
                            <div class="utf_listing_item">
                                <img src="@item.foto_capa" alt=""> <span class="tag">
                                    <i class="im im-icon-Book"></i>@item.oque_e
                                </span>

                                <div class="utf_listing_item_content">
                                    <div class="utf_listing_prige_block">
                                        @*<span class="utf_meta_listing_price"><i class="fa fa-tag"></i> $25 - $55</span>*@
                                    </div>
                                    <h3>
                                        @item.titulo
                                    </h3>
                                    <span><i class="sl sl-icon-tag"></i> Titulo: @item.subtitulo</span>

                                </div>
                            </div>
                            <div class="utf_star_rating_section" data-rating="4.5">
                                <div class="utf_counter_star_rating"></div>
                                <span class="utf_view_count"><i class="fa fa-eye"></i> 822+</span>
                                <span class="like-icon"></span>
                            </div>
                        </a>
                    </div>

                }

            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="utf_pagination_container_part margin-top-20 margin-bottom-75">
                        <nav class="pagination">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("Biblioteca",
                                    new { page }))
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function myFunction(id,oquee) {
        window.open("/Pdf/index?filename=" + oquee);
        //window.open("/inicio/redirectToPdfViewer?filename=" + oquee);
    }
</script>

