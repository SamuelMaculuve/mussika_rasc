@model PagedList.IPagedList<ASP_Mussika.Models.FarmaciaViewModel>
@using PagedList.Mvc;

<div class="utf_dashboard_list_box table-responsive recent_booking">
    <h4>Lista de Farmácias</h4>
    <div class="dashboard-list-box table-responsive invoices with-icons">
        <div class="row ">
            <div class="col-md-6">

            </div>
            <div class="col-md-4 center">
                <h5><strong>Filtro por Nome:</strong></h5>
                <input type="text" name="filtro2" id="filtro2"  placeholder="Digite o nome da Farmácia..." value="@ViewBag.filtro2">
            </div>
            <div class="col-md-2">
                <a href="javascript:pesquisarFarmacia()" style="margin-top:40px;" class="button gray"><i class="fa fa-search"></i> Pesquisar</a>
            </div>

        </div>
        <table class="table table-hover">
            <thead style="background-color:#dc640e;color:white">
                <tr>
                    <th>Codigo</th>
                    <th>Farmácia</th>
                    <th>Distrito</th>
                    <th>Acções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.categoria_obra_arte.descricao)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.nome_distrito)
                        </td>
                        <td>
                            <a href="/Saude/EditarFarmacia?id=@item.id" class="button gray"><i class="fa fa-eye"></i> Editar</a>
                            <a href="/Saude/farmaciaProduto?id=@item.id" class="button gray"><i class="fa fa-eye"></i> Produtos</a>



                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12">
        <div class="utf_pagination_container_part margin-top-30">
            <nav class="pagination">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("gestao",
                            new { page }))
            </nav>
        </div>
    </div>
</div>
<script>


    function pesquisarFarmacia() {
         location.href = '/saude/gestao?filtroFarmacia='+$("#filtro2").val();
    }
</script>
