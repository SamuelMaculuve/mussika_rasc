@model ASP_Mussika.Models.RestViewModel

@{
    ViewBag.Title = "Perfil";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta name="author" content="">
    <meta name="description" content="">
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mussika | Zambézia</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Repository/images/logo/favicon_mussika 16x16.png">



    <!-- Style CSS -->
    <link rel="stylesheet" href="~/Content/library/css/stylesheet.css">
    <link rel="stylesheet" href="~/Content/library/css/style.css" id="colors">



    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,600,700,800&display=swap&subset=latin-ext,vietnamese" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700,800" rel="stylesheet" type="text/css">

    <link href="~/Content/library/css/jquery-confirm.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Wrapper -->
    <div id="main_wrapper">

        <div class="clearfix">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <div class="list-inline">

                        <a style="padding-left:4px; padding-right:4px;" href="#">PT <img src="~/Repository/images/flags/portugal.png" /></a>
                        <a style="padding-left:4px; padding-right:4px;" href="#">FR <img src="~/Repository/images/flags/france.png" /></a>
                        <a style="padding-left:4px; padding-right:4px;" href="#">ENG <img src="~/Repository/images/flags/united-kingdom.png" /></a>

                    </div>
                </div>
            </div>
        </div>

        <header id="header_part">
            <div id="header">
                <div class="container">
                    <div class="utf_left_side">
                        <div id="logo"> <a href="/inicio/principal"><img src="~/Repository/images/logo/logo 38 x 50.png" alt=""></a> </div>
                        <div class="nav_responsive"> <i class="fa fa-reorder menu-trigger"></i> </div>
                        <nav id="navigation" class="style_one">
                            <ul id="responsive">
                                <li>
                                    <a class="current" href="#!">Inicio</a>
                                    <ul>
                                        <li><a href="/inicio/Distritos">Distritos</a></li>
                                        <li><a href="/PubAcomodacao/Acomodacoes">Acomodações</a></li>
                                        <li><a href="/inicio/restaurantes">Restaurantes</a></li>
                                        <li><a href="/PubShopMussika/Index">Shop Mussika</a></li>
                                        <li><a href="/servico_taxi/listar">Taxi</a></li>
                                        <li><a href="#">Música</a></li>
                                        <li><a href="#">Arte e Cultura</a></li>
                                        <li><a href="#">Eventos</a></li>

                                        <li><a href="#">Aluguer de Viaturas</a></li>

                                    </ul>
                                </li>

                                <li>
                                    <a class="" href="/inicio/empresa">Empresa</a>
                                </li>

                                <li>
                                    <a class="" href="/inicio/produtos">Publicidade</a>
                                </li>

                                <li>
                                    <a class="" href="/inicio/seguranca">Segurança</a>
                                </li>

                                <li>
                                    <a class="" href="/inicio/como_pagar">Como Pagar</a>
                                </li>

                                <li>
                                    <a class="" href="/inicio/ajuda">Ajuda</a>
                                </li>


                            </ul>
                        </nav>
                        <div class="clearfix"></div>
                    </div>
                    <div class="utf_right_side">
                        @if (Session["idusario"] == null)
                        {
                            <div id="semLogin" class="header_widget"> <a href="#dialog_signin_part" class="button border sign-in popup-with-zoom-anim"><i class="fa fa-sign-in"></i> Entrar</a> @*<a href="#" class="button border with-icon"><i class="sl sl-icon-user"></i> Cadastre-se</a>*@</div>
                        }
                        else
                        {
                            <div comLogin class="header_widget">
                                <div class="dashboard_header_button_item has-noti js-item-menu">
                                    <i class="sl sl-icon-bell"></i>
                                    <div class="dashboard_notifi_dropdown js-dropdown">
                                        <div class="dashboard_notifi_title">
                                            <p>Você Tem 2 Notificações</p>
                                        </div>
                                        <div class="dashboard_notifi_item">
                                            <div class="bg-c1 red">
                                                <i class="fa fa-check"></i>
                                            </div>
                                            <div class="content">
                                                <p>Pedido de suporte</p>
                                                <span class="date">2 horas atrás </span>
                                            </div>
                                        </div>

                                        <div class="dashboard_notify_bottom text-center pad-tb-20">
                                            <a href="#">Ver todas as Notificações </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="utf_user_menu">
                                    <div class="utf_user_name"><span><img src="@Session["imagem"].ToString()" alt=""></span>Olá,  @Session["nome"].ToString()!</div>
                                    <ul>
                                        @if (@Session["tipo"].ToString() == "1")
                                        {
                                            <li><a href="#"><i class="sl sl-icon-layers"></i> Mensagens</a></li>
                                            <li><a href="/Carteira/Index?id_usuario=@Session["idusario"].ToString()"><i class="sl sl-icon-layers"></i> Minha Carteira</a></li>
                                            <li><a href="/CarrinhoCompra/Index?id_usuario=@Session["idusario"].ToString()"><i class="sl sl-icon-layers"></i> Meu Carinho</a></li>
                                        }
                                        else if (@Session["tipo"].ToString() == "2")
                                        {
                                            <li><a href="#"><i class="sl sl-icon-layers"></i> Painel Publico</a></li>
                                            <li><a href="/Carteira/Index?id_usuario=@Session["idusario"].ToString()"><i class="sl sl-icon-layers"></i> Minha Carteira</a></li>
                                            <li><a href="/CarrinhoCompra/Index?id_usuario=@Session["idusario"].ToString()"><i class="sl sl-icon-layers"></i> Meu Carinho</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/administracao/DashBoard"><i class="sl sl-icon-layers"></i> Painel</a></li>
                                        }

                                        <li><a href="#"><i class="sl sl-icon-user"></i> Meu Perfil</a></li>

                                        <li><a href="/Login/RedifinirSenha?usuario=@Session["usuario"].ToString()"><i class="sl sl-icon-envelope-open"></i> Redifinir Senha</a></li>
                                        <li><a href="/Login/Sair"><i class="sl sl-icon-power"></i>  Sair</a></li>
                                    </ul>
                                </div>
                            </div>
                        }


                    </div>

                    <div id="dialog_signin_part" class="zoom-anim-dialog mfp-hide">
                        <div class="small_dialog_header">
                            <h3>Entrar</h3>
                        </div>
                        <div class="utf_signin_form style_one">
                            <ul class="utf_tabs_nav">
                                <li class=""><a href="#tab1">Entrar</a></li>
                                <li><a href="#tab2">Cadastre-se</a></li>
                            </ul>
                            <div class="tab_container alt">
                                <div class="tab_content" id="tab1" style="display:none;">
                                    <form method="post" class="login">
                                        <p class="utf_row_form utf_form_wide_block">
                                            <label for="username">
                                                <input type="text" class="input-text" name="username" id="username" value="" placeholder="Informe seu Email" />
                                            </label>
                                        </p>
                                        <p class="utf_row_form utf_form_wide_block">
                                            <label for="password">
                                                <input class="input-text" type="password" name="password" id="password" placeholder="senha" />
                                            </label>
                                        </p>
                                        <div class="utf_row_form utf_form_wide_block form_forgot_part">
                                            <span class="lost_password fl_left"> <a href="/Login/EsqueceuSenha">Esqueceu a senha?</a> </span>
                                            <div class="checkboxes fl_right">
                                                <input id="remember-me" type="checkbox" name="check">
                                                <label for="remember-me">Guardar</label>
                                            </div>
                                        </div>
                                        <div class="utf_row_form">
                                            <input type="button" onclick="" id="entrar" class="button" style="" name="login" value="Entrar" />
                                        </div>
                                        <div class="utf_row_form" style="margin-top:20px;">
                                            <ul class="utf_tabs_nav">
                                                <li><a href="#" onclick="login(); return false;" class="instagram-link"><i class="fa fa-google"></i> Gmail</a></li>
                                                <li><a href="#" onclick="loginWithFacebook(); return false" class="facebook-link"><i class="fa fa-facebook"></i> Facebook</a></li>

                                            </ul>
                                        </div>
                                    </form>
                                </div>

                                <div class="tab_content" id="tab2" style="display:none;">
                                    <form method="post" class="register">
                                        <p class="utf_row_form utf_form_wide_block">
                                            <label for="username2">
                                                <input type="text" class="input-text" name="username" id="username2" value="" placeholder="utilizador" />
                                            </label>
                                        </p>
                                        <p class="utf_row_form utf_form_wide_block">
                                            <label for="email2">
                                                <input type="text" class="input-text" name="email" id="email2" value="" placeholder="e-mail" />
                                            </label>
                                        </p>
                                        <p class="utf_row_form utf_form_wide_block">
                                            <label for="Telefone">
                                                <text>Telefone: Prefixo do numero é obrigatorio! </text>
                                                <input type="text" class="input-text" name="telefone" id="telefone" value="" placeholder="Ex: 258 841111111" />
                                            </label>
                                        </p>
                                        <p class="utf_row_form utf_form_wide_block">
                                            <label for="password1">
                                                <input class="input-text" type="password" name="password1" id="password1" placeholder="senha" />
                                            </label>
                                        </p>
                                        <p class="utf_row_form utf_form_wide_block">
                                            <label for="password2">
                                                <input class="input-text" type="password" name="password2" id="password2" placeholder="Confirmar Senha" />
                                            </label>
                                        </p>
                                        <input type="button" id="registar" class="button border fw margin-top-10" name="register" value="Registar" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                    @* modal *@
                    <div id="dialog_signin_part_" class="zoom-anim-dialog mfp-hide">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 text-center">


                                    <img src="~/Repository/images/index.ajax-spinner-gif.gif" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </header>
        <div class="clearfix"></div>
        <div id="utf_listing_gallery_part" class="utf_listing_section">
            <div class="utf_listing_slider utf_gallery_container margin-bottom-0">
                @if (ViewBag.imagens != null)
                {
                    foreach (var item in ViewBag.imagens)
                    {
                        if (item.caminho.Trim() == "noimage.png") { continue; }
                        <a href="@Url.Content("~/Repository/images/Restaurantes/"+@item.caminho)" data-background-image="@Url.Content("~/Repository/images/Restaurantes/"+@item.caminho)" class="item utf_gallery"></a>
                    }
                }
                else
                {
                    <a href="@Url.Content("~/Repository/images/bg/background.jpg")" data-background-image="@Url.Content("~/Repository/images/bg/background.jpg")" class="item utf_gallery"></a>
                }

            </div>

        </div>

        <div class="container">
            <div class="row utf_sticky_main_wrapper">
                <div class="col-lg-8 col-md-8">
                    <div id="titlebar" class="utf_listing_titlebar">
                        <div class="utf_listing_titlebar_title">
                            <h2>@Model.nome <span class="listing-tag">@Model.nomeRestauranteTipo</span></h2>
                            <span> <a href="#utf_listing_location" class="listing-address"> <i class="sl sl-icon-location"></i> @Model.endereco, @Model.nomeDistrito </a> </span>
                            @*<span class="call_now"><i class="sl sl-icon-phone"></i> (+258) @Model.telefone</span>*@
                            <div class="utf_star_rating_section" data-rating="@ViewBag.classificacao">
                                <div class="utf_counter_star_rating">(@ViewBag.nrclas Classificações)</div>
                            </div>
                            <ul class="listing_item_social">

                                <li><a href="#" class="now_open">Aberto</a></li>
                            </ul>

                          
                        </div>
                    </div>
                    <div id="utf_listing_overview" class="utf_listing_section">
                        <h3 class="utf_listing_headline_part margin-top-30 margin-bottom-30">Descrição</h3>
                        @{ var html_descricao = new HtmlString(Model.descricao); }
                        <text style="font-size:medium">

                            @html_descricao
                        </text>



                        <div id="utf_listing_location" class="utf_listing_section">
                            <h3 class="utf_listing_headline_part margin-top-60 margin-bottom-40">Localizacao</h3>
                            <div id="utf_single_listing_map_block">
                                <iframe src="@Model.mapa" class="col-md-12" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                            </div>
                        </div>

                        <div id="utf_listing_reviews" class="utf_listing_section">
                            @{Html.RenderAction("carregarComentarios", "PubRestaurante", new { id_restaurante = Model.id });}
                        </div>
                        <div id="utf_add_review" class="utf_add_review-box">

                            <h3 class="utf_listing_headline_part margin-bottom-20">Adicione teu Comentario ou faça sua Classificação </h3>
                            <span class="utf_leave_rating_title">Classifique esta Acomodação por meio das estrelas abaixo.</span>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="clearfix"></div>
                                    <div class="utf_leave_rating margin-bottom-30">
                                        <input type="radio" name="rating" onclick="setarClassif(5);" id="rating-1" value="5" />
                                        <label for="rating-1" class="fa fa-star"></label>
                                        <input type="radio" name="rating" onclick="setarClassif(4);" id="rating-2" value="2" />
                                        <label for="rating-2" class="fa fa-star"></label>
                                        <input type="radio" onclick="setarClassif(3);" name="rating" id="rating-3" value="3" />
                                        <label for="rating-3" class="fa fa-star"></label>
                                        <input type="radio" onclick="setarClassif(2);" name="rating" id="rating-4" value="4" />
                                        <label for="rating-4" class="fa fa-star"></label>
                                        <input type="radio" onclick="setarClassif(1);" name="rating" id="rating-5" value="5" />
                                        <label for="rating-5" class="fa fa-star"></label>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="add-review-photos margin-bottom-30">
                                        @*<div class="photoUpload">
                            <span>Carregar Foto <i class="sl sl-icon-arrow-up-circle"></i></span>
                            <input type="file" class="upload" />
                        </div>*@
                                    </div>
                                </div>
                            </div>
                            <form id="utf_add_comment" class="utf_add_comment">
                                <fieldset>
                                    @if (Session["idusario"] == null)
                                    {
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label>Nome:</label>
                                                <input type="text" id="nomeUsuarioComentario" placeholder="Nome" value="" />
                                            </div>
                                            <div class="col-md-4">
                                                <label>Email:</label>
                                                <input type="text" id="emailComentario" placeholder="Email" value="" />
                                            </div>
                                            <div class="col-md-4">
                                                <label>Assunto:</label>
                                                <input type="text" id="assunto" placeholder="Assunto" value="" />
                                            </div>
                                        </div>
                                    }

                                    <div>
                                        <label>Comentario:</label>
                                        <textarea cols="40" id="comentario" placeholder="Seu Comentario..." rows="3"></textarea>
                                    </div>
                                </fieldset>
                                <button type="button" id="btnComentar" class="button">Comentar</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
            </div>
                <!-- Sidebar -->
                <div class="col-lg-4 col-md-4 margin-top-75 sidebar-search">
                    <div class="verified-badge with-tip margin-bottom-30" data-tip-content="Listing has been verified and belongs business owner or manager."> <i class="sl sl-icon-check"></i> @Model.nomeDistrito.ToUpper()</div>
                    <div class="row">

                        @if (Session["idusario"] != null)
                        {
                            <button class="utf_progress_button button fullwidth_block margin-top-5" id="btnReservarMesa" type="button">Reservar Mesa</button>
                            <button class="utf_progress_button button fullwidth_block margin-top-5" id="btnAddCarrinho" type="button">Ver Pratos Fornecidos</button>


                        }
                        else
                        {
                            <p>Faça login para Reservar uma mesa neste Restaurante</p>
                            <button class="utf_progress_button button fullwidth_block margin-top-5" id="btnAddCarrinho" type="button">Ver Pratos Fornecidos</button>
                        }

                    </div>
                    <div class="utf_box_widget margin-top-35 margin-bottom-75">
                        <h3><i class="sl sl-icon-folder-alt"></i> Categorias</h3>
                        <ul class="utf_listing_detail_sidebar">

                            <li><i class="fa fa-angle-double-right"></i> <a href="/inicio/Distritos">Distritos</a></li>
                            <li><i class="fa fa-angle-double-right"></i> <a href="/PubAcomodacao/Acomodacoes">Acomodações</a></li>
                            <li><i class="fa fa-angle-double-right"></i> <a href="/inicio/restaurantes">Restaurantes</a></li>
                            <li><i class="fa fa-angle-double-right"></i> <a href="/servico_taxi/listar">Taxis</a></li>
                            <li><i class="fa fa-angle-double-right"></i> <a href="#">Shop Mussika</a></li>
                            <li><i class="fa fa-angle-double-right"></i> <a href="#">Eventos</a></li>

                        </ul>
                    </div>

                </div>
        </div>

            <section class="fullwidth_block padding-top-20 padding-bottom-50">
                <div class="container">
                    <div class="row slick_carousel_slider">
                        <div class="col-md-12">
                            <h3 class="headline_part centered margin-bottom-25">Acomodações Similares</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="simple_slick_carousel_block utf_dots_nav">
                                    @if (ViewBag.Restaurantes_similares != null)
                                    {
                                        foreach (var item in ViewBag.Restaurantes_similares)
                                        {
                                            <div class="utf_carousel_item">
                                                <a href="listings_single_page_1.html" class="utf_listing_item-container compact">
                                                    <div class="utf_listing_item">
                                                        <img src="../Repository/images/Restaurantes/@item.foto_capa" alt=""> <span class="tag"><i class="im im-icon-Chef-Hat"></i> @Model.nomeRestauranteTipo</span>
                                                        <span class="utf_open_now">Aberto</span>
                                                        <div class="utf_listing_item_content">
                                                            <div class="utf_listing_prige_block">
                                                                @*<span class="utf_meta_listing_price"><i class="fa fa-tag"></i> $25 - $45</span>*@
                                                                <span class="utp_approve_item"><i class="utf_approve_listing"></i></span>
                                                            </div>
                                                            <h3>@item.nome</h3>
                                                            <span><i class="sl sl-icon-location"></i> @item.endereco</span>
                                                            <span><i class="sl sl-icon-phone"></i> @item.telefone</span>
                                                        </div>
                                                    </div>
                                                    <div class="utf_star_rating_section" data-rating="4.5">
                                                        <div class="utf_counter_star_rating">(4.5)</div>
                                                        <span class="utf_view_count"><i class="fa fa-eye"></i> 822+</span>
                                                        <span class="like-icon"></span>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    }


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
       
        <!-- Footer -->
        <div style="margin-top:10px;" id="footer" class="footer_sticky_part">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-sm-3 col-xs-6">
                        <h4>Links Uteis</h4>
                        <ul class="social_footer_link">
                            <li><a href="/inicio/principal">Inicio</a></li>
                            <li><a href="/inicio/empresa">Empresa</a></li>
                            <li><a href="/inicio/produtos">Produtos</a></li>
                            <li><a href="/inicio/seguranca">Segurança</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2 col-sm-3 col-xs-6">
                        <h4>Minha Conta</h4>
                        <ul class="social_footer_link">
                            <li><a href="#">Pefil</a></li>
                            <li><a href="#">Mensagens</a></li>
                            <li><a href="#">Favoritos</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2 col-sm-3 col-xs-6">
                        <h4>Páginas</h4>
                        <ul class="social_footer_link">
                            <li><a href="/inicio/Distritos">Distritos</a></li>
                            <li><a href="#">Serviços</a></li>
                            <li><a href="#">Música</a></li>
                            <li><a href="#">Arte & Cultura</a></li>
                            <li><a href="/Restaurante/Index">Restaurantes</a></li>
                            <li><a href="#">Eventos</a></li>
                            <li><a href="#">Aluguer de Viaturas</a></li>
                            <li><a href="#">Taxi</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2 col-sm-3 col-xs-6">
                        <h4>Ajuda</h4>
                        <ul class="social_footer_link">
                            @*<li><a href="#">Entrar</a></li>
                                <li><a href="#">Registar</a></li>*@
                            <li><a href="#">Como Pagar</a></li>
                            <li><a href="#">Contacte-nos</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12">
                        <h4>Quem somos</h4>
                        <p>O Mussika é uma plataforma online que visa apresentar as potêncialidades da provincia da Zambézia com o especial enfoque para as áreas de Turismos, Musicas e Cultura</p>
                        <p><a href="/inicio/empresa" class="btn btn-primary"> Saber Mais</a></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="footer_copyright_part">Copyright ©  Mussika - Todos os Direitos Reservados.</div>
                    </div>
                </div>
            </div>
        </div>
        <div id="bottom_backto_top"><a href="#"></a></div>
    </div>

