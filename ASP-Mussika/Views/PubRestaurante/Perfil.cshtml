    <script src="~/Content/library/scripts/counterup.min.js"></script>
    <script src="~/Content/library/scripts/jquery-ui.min.js"></script>
    <script src="~/Content/library/scripts/tooltips.min.js"></script>
    <script src="~/Content/library/scripts/color_switcher.js"></script>
