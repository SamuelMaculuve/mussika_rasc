@model PagedList.IPagedList<ASP_Mussika.Models.clinica>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Clinicas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container padding-bottom-70">
    <div class="row">
        <div class="col-md-12">


            <h3 class="headline_part centered margin-bottom-35 margin-top-70">Clínicas da Zambézia</h3>
            <div class="row ">
                <div class="col-md-2">

                </div>
                <div class="col-md-6 center">
                    <h5><strong>Filtro por Nome:</strong></h5>
                    <input type="text" name="filtro" id="filtro" placeholder="Digite o nome da Clínicas..." value="@ViewBag.filtro">
                </div>
                <div class="col-md-2">
                    <a href="javascript:pesquisar()" style="margin-top:30px;" class="button gray"><i class="fa fa-search"></i> Pesquisar</a>
                </div>
                <div class="col-md-2">

                </div>

            </div>
        </div>

        @foreach (var d in Model)
        {
            <div class="col-md-3">
                <a href="@Url.Action("Clinica", "PubSaude", new { id = d.id })" class="img-box" data-background-image="../Repository/images/clinicas/@d.foto_capa">
                    <div class="utf_img_content_box visible">
                        <h4>@d.nome</h4>
                    </div>
                </a>
            </div>

        }

    </div>
</div>

<div class="container">

    <div class="row">

        <div id="div_paginas" style="margin-top:-50px;" class="col-md-12">
            <div class="utf_pagination_container_part margin-top-20 margin-bottom-70">
                <nav class="pagination">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("Hospitais",
                            new { page }))

                </nav>
            </div>
        </div>

    </div>

</div>

<script>
     function pesquisar() {
         location.href = '/PubSaude/Clinicas?filtro='+$("#filtro").val();
    }
</script>